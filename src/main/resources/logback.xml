<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%msg%n</pattern>
    </encoder>
  </appender>

  <appender name="SIFT" class="ch.qos.logback.classic.sift.SiftingAppender">
    
    <discriminator class="ch.qos.logback.classic.sift.MDCBasedDiscriminator">
      <key>projectName</key>
      <defaultValue>unknown-project</defaultValue>
    </discriminator>
    
    <sift>
      <appender name="FILE-${projectName}" class="ch.qos.logback.core.FileAppender">
        <file>${projectName}-report.txt</file>
        <append>false</append>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
          <level>INFO</level>
        </filter>
        <encoder>
          <pattern>%msg%n</pattern>
        </encoder>
      </appender>
    </sift>
  </appender>

  <logger name="com.github.fommil.netlib" level="ERROR"/>

  <logger name="com.github.fommil.netlib" level="ERROR"/>

  <logger name="com.github.fommil.jni" level="WARN"/>

  <root level="INFO">
    <appender-ref ref="STDOUT" />
    <appender-ref ref="SIFT" />
  </root>

</configuration>