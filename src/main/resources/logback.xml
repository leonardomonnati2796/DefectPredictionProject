<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%-5level - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="org.eclipse.jgit" level="WARN"/>
  
  <logger name="com.github.fommil" level="ERROR"/>

  <root level="INFO">
    <appender-ref ref="STDOUT" />
  </root>
  
</configuration>